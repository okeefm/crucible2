<div class="row">
  <div class="col-md-4">
    <div><label><%= title %>:</label></div>
  </div>

  <div class="col-md-4 word-wrap">
    <% if boolean %>
      <% if value %>
        Yes
      <% else %>
        No
      <% end %>
    <% else %>
      <% if value %>
        <%= value %>
      <% else %>
        --
      <% end %>
    <% end %>
  </div>

  <% if isMultiple %>
    <div class="col-md-4 word-wrap">
      <% if boolean %>
        <% if value2 %>
          Yes
        <% else %>
          No
        <% end %>
      <% else %>
        <% if value2 %>
          <%= value2 %>
        <% else %>
          --
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
